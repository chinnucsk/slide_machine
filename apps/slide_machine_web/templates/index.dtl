<!doctype html>
  <head>
    <title>Slide Machine</title>

    <meta name="author" content="Tim McGilchrist <timmcgil@gmail.com>">

    <link rel="stylesheet" href="stylesheets/screen.css" type="text/css">
    <link rel="stylesheet" href="stylesheets/slide_machine.css" type="text/css">

    <script src="/javascripts/modernizr-1.6.min.js"></script>
    <script src="/javascripts/jquery-1.5.1.min.js"></script>
    <script src="/javascripts/json2.js"></script>
    <script src="/javascripts/underscore.js"></script>
    <script src="/javascripts/backbone.js"></script>
    <script src="/javascripts/slide_machine.js"></script>

    <!-- Display All Decks -->
    <script type="text/template" id="library-template">
      <h1>Deck Library</h1>
      <ul class="decks"></ul>
    </script>

    <!-- Render an individual deck -->
    <script type="text/template" id="deck-thumbnail-template">
      <span class="deck-title"><%= title %></span>
      <span class="deck-author"><%= author %></span>
      <button class="queue add">View</button>
    </script>

    <!-- Center panel Slide Deck information-->
    <script type="text/template" id="deck-info-template">
       <div class="deck-title"><%= title %></div>
       <div class="deck-author">Author: <%= author %></div>
       <div class="deck-summary"><%= summary %></div>
    </script>

    <script type="text/template" id="playlist-template">
      <h1>Playlist</h1>
      <div class="deck-info"></div>
      <nav>
        <button class="control prev">Prev</button>
        <button class="control next">Next</button>
      </nav>
    </script>

    <!-- Display contents of a single slide -->
    <script type="text/template" id="slide-template">
      <span class="slide-title"><%= title %></span>
      <div id="slide-contents"><%= contents %></span>
    </script>

    <script type="application/javascript">
      jQuery(function() {
        window.library.fetch();
      });
    </script>
  </head>

  <body>
    <div id="container">
    </div>
  </body>
</html>
